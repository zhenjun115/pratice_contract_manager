<!DOCTYPE mapper PUBLIC "-//com.order.test.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.contract.manager.mapper.PurchaseTemplateMapper">

    <insert id="add" parameterType="com.contract.manager.model.PurchaseTemplate">
        insert into contract_template ( templateId, title, content, cat_code, fileName ) 
        values
        ( #{templateId}, #{name}, #{desc}, 'cat_1', #{file} )
    </insert>

