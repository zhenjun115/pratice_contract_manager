    <!-- 根据模版代号获取模版 -->
    <select id="fetch" parameterType="com.contract.manager.model.PurchaseTemplate" resultType="com.contract.manager.model.PurchaseTemplate">
        select * from contract_template where cat_code = 'cat_1'
        <if test="keyword != null">
        and title like '%'|| #{keyword} || '%'
        </if>
    </select>

    <select id="fetchByTemplateId" parameterType="java.lang.String" resultType="com.contract.manager.model.PurchaseTemplate">
        select * from contract_template where templateId = #{templateId}
    </select>
</mapper>